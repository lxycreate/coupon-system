<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.system.dao.LogDao">
    <resultMap type="log" id="logMapper">
        <id property="id" column="id"></id>
        <result property="type" column="type"/>
        <result property="obj" column="obj"/>
        <result property="status" column="status"/>
        <result property="code" column="code"/>
        <result property="create_time" column="create_time"/>
        <result property="start_time" column="start_time"/>
        <result property="end_time" column="end_time"/>
    </resultMap>

    <select id="getLogNum" resultType="java.lang.Integer">
        select count(*) from log
    </select>

    <!--插入日志数据-->
    <insert id="insertLog">
        insert into log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="type != null">
                type,
            </if>
            <if test="obj != null">
                obj,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="code != null">
                code,
            </if>
            <if test="create_time != null">
                create_time,
            </if>
            <if test="start_time != null">
                start_time,
            </if>
            <if test="end_time != null">
                end_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="type != null">
                #{type},
            </if>
            <if test="obj != null">
                #{obj},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="code != null">
                #{code},
            </if>
            <if test="create_time != null">
                #{create_time},
            </if>
            <if test="start_time != null">
                #{start_time},
            </if>
            <if test="end_time != null">
                #{end_time},
            </if>
        </trim>
    </insert>

    <!--更新日志-->
    <update id="updateLog">
        update log
        <trim prefix="set" suffixOverrides=",">
            <if test="status != null">
                status=#{status},
            </if>
            <if test="code != null">
                code=#{code},
            </if>
            <if test="start_time != null">
                start_time=#{start_time},
            </if>
            <if test="end_time != null">
                end_time=#{end_time},
            </if>
        </trim>
        where id=#{id}
    </update>

    <!--获取未完成任务日志-->
    <select id="getUnFinishWork" resultType="log" resultMap="logMapper">
       select * from log where status='wait' or end_time = ''
    </select>

    <!--获取正在运行的任务数量-->
    <select id="getRunningWorkNum" resultType="java.lang.Integer">
       select count(*) from log where status='running'
    </select>

    <!--获取正在等待执行的且ID最小的任务-->
    <select id="getWaitWork" resultType="java.lang.Integer">
       select * from log where status='wait' order by id asc limit 1
    </select>
</mapper>
